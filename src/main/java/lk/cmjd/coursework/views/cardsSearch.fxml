<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<!-- Fixed namespace to JavaFX 21 -->
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lk.cmjd.coursework.controller.CardViewController" spacing="10"
      styleClass="root">

    <!-- Search Bar -->
    <TextField fx:id="searchField" promptText="Search..." styleClass="search-field"/>

    <!-- Scrollable Card Container -->
    <ScrollPane fitToWidth="true">
        <!-- Fixed padding syntax -->
        <TilePane fx:id="cardContainer"
                  padding="10 10 10 10"
                  hgap="10" vgap="10"
                  prefColumns="3" prefTileWidth="200"/>
    </ScrollPane>
</VBox>